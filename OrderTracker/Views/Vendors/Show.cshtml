@using ToDoList.Models;
<h2> Here are all the orders for this vendor:</h2>
<ol>
  @foreach(Item item in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@item.Id'>@order.Title</a></li>
  }
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
